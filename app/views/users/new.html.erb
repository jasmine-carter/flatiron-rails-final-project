<h1> Sign Up! </h1>
<%= render partial: 'layouts/errors', locals: {object: @user} %>

<%= form_for @user, controller: 'users', action: 'create' do |f| %>

Name <%= f.text_field :name %> <br>
Email <%= f.text_field :email %> <br>
Password <%= f.password_field :password %><br><br>

<%= f.submit "Sign Up" %>
<%end%>

