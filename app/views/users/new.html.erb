<h1> Sign Up! </h1>
<div>
  <% if flash[:message].present? %>
  <p style="color:red"><%= flash[:message] %> </p>
  <% end %>
</div>

<%= form_for @user, controller: 'users', action: 'create' do |f| %>

Name <%= f.text_field :name %> <br>
Email <%= f.text_field :email %> <br>
Password <%= f.password_field :password %><br><br>

<%= f.submit "Sign Up" %>
<%end%>

